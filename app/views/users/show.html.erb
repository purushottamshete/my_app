<% provide(:title, @user.name) %>

<div class="row">

<h1>User Show</h1>
<%= @user.name %>, <%= @user.email %>

  <aside>
  </aside>

  <div class="span8">

    <% if @user.microposts.any? %>

      <h3>Microposts (<%= @user.microposts.count %>)</h3>

      <ol class="microposts">

        <%= render @microposts %>

      </ol>

      <%= will_paginate @microposts %>

    <% end %>

  </div>

</div>
